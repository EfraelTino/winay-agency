<script>
  // 1. Definimos la funci√≥n de carga (Igual que antes, con el rastreo de Facebook)
  function loadCalEmbed() {
    if (window.Cal) return; // Evitar recargas

    (function (C, A, L) {
      let p = function (a, ar) { a.q.push(ar); };
      let d = C.document;
      C.Cal = C.Cal || function () {
        let cal = C.Cal;
        let ar = arguments;
        if (!cal.loaded) {
          cal.ns = {};
          cal.q = cal.q || [];
          d.head.appendChild(d.createElement("script")).src = A;
          cal.loaded = true;
        }
        if (ar[0] === L) {
          const api = function () { p(api, arguments); };
          const namespace = ar[1];
          api.q = api.q || [];
          if (typeof namespace === "string") {
            cal.ns[namespace] = cal.ns[namespace] || api;
            p(cal.ns[namespace], ar);
            p(cal, ["initNamespace", namespace]);
          } else p(cal, ar);
          return;
        }
        p(cal, ar);
      };
    })(window, "https://app.cal.com/embed/embed.js", "init");

    Cal("init", "30min", { origin: "https://app.cal.com" });

    Cal.ns["30min"]("inline", {
      elementOrSelector: "#my-cal-inline-30min",
      config: { layout: "month_view", defaultPhoneCountry: "pe" },
      calLink: "winay-agency/30min",
    });

    Cal.ns["30min"]("ui", {
      hideEventTypeDetails: false,
      layout: "month_view",
    });

    // Rastreo de Conversi√≥n (Lead) cuando se completa la reserva
    Cal.ns["30min"]("on", {
      action: "bookingSuccessful",
      callback: (e) => {
        if (window.fbq) {
           window.fbq('track', 'Lead');
           console.log("¬°Cita agendada! Pixel Lead disparado.");
        }
      }
    });

    // Ocultar loader
    setTimeout(() => {
      const loader = document.getElementById("calendar-loader");
      if (loader) loader.style.display = "none";
    }, 2000);
  }

  // 2. L√ìGICA DE CARGA INTELIGENTE (SCROLL O TIEMPO)
  let calendarLoaded = false;

  function initCalendarTrigger() {
    // Si ya carg√≥, no hacemos nada
    if (calendarLoaded) return;
    
    calendarLoaded = true;
    console.log("Iniciando carga del calendario (Usuario activo o Tiempo cumplido)...");
    loadCalEmbed();

    // Limpiamos los eventos para no gastar memoria
    document.removeEventListener("scroll", initCalendarTrigger);
    document.removeEventListener("mousemove", initCalendarTrigger);
    document.removeEventListener("touchstart", initCalendarTrigger);
  }

  // Opci√≥n A: Cargar autom√°ticamente a los 3.5 segundos
  setTimeout(initCalendarTrigger, 3500);

  // Opci√≥n B: Cargar apenas el usuario interact√∫e (haga scroll o mueva el mouse)
  // Usamos { passive: true } para no afectar el rendimiento del scroll
  document.addEventListener("scroll", initCalendarTrigger, { passive: true });
  document.addEventListener("mousemove", initCalendarTrigger, { passive: true });
  document.addEventListener("touchstart", initCalendarTrigger, { passive: true });

</script>