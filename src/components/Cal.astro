<script>
  // Esta funci√≥n carga el script de Cal.com
  function loadCalEmbed() {
    if (window.Cal) return; // Si ya existe, no hacemos nada

    (function (C, A, L) {
      let p = function (a, ar) {
        a.q.push(ar);
      };
      let d = C.document;
      C.Cal =
        C.Cal ||
        function () {
          let cal = C.Cal;
          let ar = arguments;
          if (!cal.loaded) {
            cal.ns = {};
            cal.q = cal.q || [];
            d.head.appendChild(d.createElement("script")).src = A;
            cal.loaded = true;
          }
          if (ar[0] === L) {
            const api = function () {
              p(api, arguments);
            };
            const namespace = ar[1];
            api.q = api.q || [];
            if (typeof namespace === "string") {
              cal.ns[namespace] = cal.ns[namespace] || api;
              p(cal.ns[namespace], ar);
              p(cal, ["initNamespace", namespace]);
            } else p(cal, ar);
            return;
          }
          p(cal, ar);
        };
    })(window, "https://app.cal.com/embed/embed.js", "init");

    Cal("init", "30min", { origin: "https://app.cal.com" });

    Cal.ns["30min"]("inline", {
      elementOrSelector: "#my-cal-inline-30min",
      config: { layout: "month_view", defaultPhoneCountry: "pe" },
      calLink: "winay-agency/30min",
    });

    Cal.ns["30min"]("ui", {
      hideEventTypeDetails: false,
      layout: "month_view",
    });

    // Ocultamos el loader despu√©s de unos segundos para dar tiempo a que renderice
    setTimeout(() => {
      const loader = document.getElementById("calendar-loader");
      if (loader) loader.style.display = "none";
    }, 2000);
  }

  // --- LA MAGIA DEL RENDIMIENTO AQU√ç ---
  // Usamos IntersectionObserver para detectar cuando el usuario ve la secci√≥n
  document.addEventListener("DOMContentLoaded", () => {
    const calendarSection = document.getElementById("cal");

    if (calendarSection) {
      const observer = new IntersectionObserver(
        (entries) => {
          entries.forEach((entry) => {
            if (entry.isIntersecting) {
              // ¬°El usuario lleg√≥ a la secci√≥n! Cargamos el calendario.
              console.log("Cargando calendario...");
              loadCalEmbed();
              // Dejamos de observar para no ejecutarlo dos veces
              observer.disconnect();
            }
          });
        },
        {
          rootMargin: "200px", // Carga el calendario 200px antes de llegar (pre-carga)
        }
      );

      observer.observe(calendarSection);
    }
  });
</script>
